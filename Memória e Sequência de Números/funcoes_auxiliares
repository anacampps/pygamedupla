import random 
##-- função 1:  * há uma progressão que acompanha a funçao gera_num
x = 2
def gera_num(x):
    sequencia_aleratoria = []
    num_alaeatorio = 10**x**(x-1)
    sequencia_aleratoria.append(num_alaeatorio)
    x +=1
    return (random.randint(sequencia_aleratoria[0], sequencia_aleratoria[0]*10))
    
print (gera_num(x))
    
